/var/log/frr/*.log {
        size 500k
        sharedscripts
        missingok
        compress
        rotate 14
        create 640 frr frrvty
	include /etc/logrotate.d/cumulus.savefast

        postrotate
		for i in zebra bgpd ripd ospfd ripngd ospf6d isisd pimd; do
                        if [ -e /var/run/frr/$i.pid ] ; then
				kill -USR1 `cat /var/run/frr/$i.pid`
                        fi

                done
        endscript
}
